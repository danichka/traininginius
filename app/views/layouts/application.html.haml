!!!
%html
  %head
    %title Traininginius
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    %p.notice= notice
    %p.alert= alert

    .container
      .nav
        .navbar
          .container
            - if current_user
              = current_user.email
              = link_to "sign_out",  destroy_user_session_path
              = link_to 'Ask question', new_question_path
            - else
              = link_to "sign_in", new_user_session_path
              = link_to "sign up",  new_user_registration_path
            =link_to 'All questions', questions_path

    = yield
